@model ShoppingCart
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-info">Shopping Cart Details </h2>

<form asp-action="Details" method="post">

    <div class="backgroundDiv">

        @Html.HiddenFor(x => x.MenuItemId)

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-sm-12 col-lg-8">
                <div class="col-12 d-lg-none">
                    <img src="~/Uploads/@Model.MenuItem.ImageUrl" style="width:100%;border-radius:20px" class="img-thumbnail" />
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.Name" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.Description" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        @Html.Raw(Model.MenuItem.Description)
                        @*<textarea asp-for="MenuItem.Description" disabled class="form-control"></textarea>*@
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.Price" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.Price" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.Category.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="MenuItem.SpicyTypes" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="MenuItem.SpicyTypes" disabled class="form-control" asp-items="@Html.GetEnumSelectList<MenuItem.Spices>()">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Count" class="col-form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Count" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 offset-sm-0 col-md-8 offset-md-4 row">
                        <div class="col-md-6 mb-3">
                            <a class="btn btn-primary form-control">Add To Cart</a>
                        </div>
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-success form-control" value="Add To Cart" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 d-none d-lg-block offset-1">
                <img src="~/Uploads/@Model.MenuItem.ImageUrl" style="width:100%;border-radius:20px" class="img-thumbnail" />
            </div>

        </div>
    </div>

</form>

