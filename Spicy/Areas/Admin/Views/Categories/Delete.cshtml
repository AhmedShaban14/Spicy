@model Category
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">Delete Category</h2>
<div class="font-weight-bolder">Are You Sure ?!!! </div>
<form asp-action="Delete" method="post">
    <div class="backgroundDiv border">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2 row">
                <div class="col-6">
                    <input type="submit" class="btn btn-danger form-control" value="Delete" />
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</form>
