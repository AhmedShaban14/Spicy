@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<div class="backgroundDiv">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Categories List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-plus"></i> &nbsp; New Employee Register
            </a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger font-weight-bold">No Users ...! </p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(x => x.NameOfUser)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.PhoneNumber)
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.NameOfUser)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(x => item.PhoneNumber)
                </td>
                <td>
                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                    {
                        <a class="btn btn-success" asp-action="LockUnLock" asp-route-id="@item.Id">
                            <i class="fas fa-lock-open"></i>
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-danger" asp-action="LockUnLock"asp-route-id="@item.Id">
                            <i class="fas fa-lock"></i>
                        </a>
                    }

                </td>
            </tr>
                }
            </table>

        }
    </div>

</div>

