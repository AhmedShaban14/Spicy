@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<div class="backgroundDiv">

    <div class="row">
        <div class="col-8">
            <h2 class="text-info">Menu List Items </h2>
        </div>
        <div class="col-4 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>

    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger font-weight-bold">No Categoies For Now ...! </p>
        }
        else
        {
            <table class="table table-striped border ">
                <tr class="border-secondary">
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.SubCategory.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.ImageUrl)
                    </th>
                    <th>

                    </th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.SubCategory.Name)
                        </td>
                        <td>
                            <img src="~/Uploads/@item.ImageUrl" style="width:64px;height:64px" />
                        </td>
                        <partial name="_ButtonsGroupEditDetailsDeletePartial" model="@item.Id" />
                    </tr>
                }
            </table>

        }
    </div>

</div>
